{
	"name": "acf-palette",
	"version": "1.1.0",
	"description": "Add a new theme color palette selector field for Advanced Custom Fields.",
	"author": "Be API Technical team",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build src/index.js src/editor.js --blocks-manifest",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"make-pot": "wp i18n make-pot . languages/acf-palette.pot --exclude=\"src\" --domain=acf-palette",
		"make-json": "wp i18n make-json languages/acf-palette-fr_FR.po languages/ --no-purge",
		"start": "wp-scripts start src/index.js src/editor.js --blocks-manifest",
		"start:env": "wp-env start --config=./wp-env.json",
		"stop:env": "wp-env stop --config=./wp-env.json"
	},
	"devDependencies": {
		"@wordpress/env": "^10.37.0",
		"@wordpress/scripts": "latest"
	}
}
